{
  "compilerOptions": {
    "rootDir": "./lib",
    "target": "es6",
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}